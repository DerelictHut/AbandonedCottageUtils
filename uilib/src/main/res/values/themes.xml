<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item> <!-- 设置无标题 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="radioButtonStyle">@style/RadioButton_no</item>
        <item name="checkboxStyle">@style/CheckBox_no</item>
        <item name="android:windowAnimationStyle">@style/activity_in_out_anim</item>
    </style>
    <style name="activity_in_out_anim">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit_right_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_enter_left_to_right</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_exit_left_to_right</item>
    </style>
    <style name="RadioButton_no" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonCompat">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CheckBox_no" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonCompat">@null</item>
        <item name="android:background">@null</item>
    </style>
</resources>